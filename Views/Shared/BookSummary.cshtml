@{
}

@model Project

<div class="card card-outline-primary m-1 p-1" style="border-radius">
    <div class="bg-dark text-white p-1">
        <h3>@Model.BookTitle</h3>
        <p>Author: @Model.AuthLName, @Model.AuthFName</p>
        <p>Publisher: @Model.Publisher</p>
        <p>ISBN: @Model.ISBN</p>
        <p>Catergory: @Model.BookCat</p>
        <p>Classification: @Model.BookClass</p>        
        <p>Pages: @Model.Pages</p>
        <span class="badge badge-pill badge-light text-dark" style="float:right"><p>Price: $@Model.BookPrice</p></span>
    </div>
</div>